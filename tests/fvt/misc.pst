void testNewMathStuff() {
    int x = -1;
    assertEqInt(1, Math.abs(x));
    assertEqInt(1, Math.abs(-x));

    double pie = 3.14159265358979;
    double negPie = -pie;
    // Use string assertion to verify type
    assertEqStr("4", "" + Math.ceil(pie));
    assertEqStr("3", "" + Math.floor(pie));
    assertEqStr("-3", "" + Math.ceil(negPie));
    assertEqStr("-4", "" + Math.floor(negPie));
}
